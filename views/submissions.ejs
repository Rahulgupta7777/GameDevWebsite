<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Submission Page</title>
  <link rel="stylesheet" href="./styles.css" />
</head>
<body style="font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #f4f4f4; text-align: center;">
  <%- include('./utils/navbar') %>

  <div class="retro-background">
    <div class="grid"></div>
  </div>

  <div class="coin-background">
  </div>

  <div
    class="container"
    style="margin-top: 100px; position: relative; z-index: 2"
  >
    <table>
      <% if (submissions.length === 0) { %>
        <div class="content" style="display: flex; flex-direction: column; align-items: center; justify-content: center;" >
          <h1 >No submissions yet!</h1>
          <p>Be the first to submit your game!</p>
        </div>  
        <% } else { %>  %>
      <thead>
        <tr>
          <th>Team Name</th>
          <th>URL</th>
          <th style="width: 80%; font-size: 14px;">Game Description</th>
          <th>Game Genre</th>
        </tr>
      </thead>
      <tbody>
        <% submissions.forEach(submission => { %>
        <tr class="<%= (submission.name == teamName) ? 'active' : '' %>">
          <td><%= submission.name %></td>
          <td><a href="<%= submission.itchioURL %>" style="color: #fff;" target="_blank`"> <%= submission.itchioURL %></td>
          <td style="font-size: 12px; width: 50%;"><%= submission.gameDescription %></td>
          <td><%= submission.gameGenre %></td>
        </tr>
        <% }) } %>
      </tbody>
    </table>
  </div>

  <script src="script.js"></script>
</body>
</html>

